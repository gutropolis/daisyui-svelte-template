# Application Configuration
APP_NAME=DaisyUI Healthcare API
APP_VERSION=1.0.0
ENV=development
DEBUG=true

# Database Configuration
# UPDATE with your MySQL credentials and database name
DATABASE_URL=mysql+pymysql://root:root@localhost:3306/daisyui_db

# JWT Configuration
# IMPORTANT: Change SECRET_KEY to a strong random string in production
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Add your frontend URLs here
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Logging
LOG_LEVEL=INFO
